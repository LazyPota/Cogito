<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layoutProMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="280dp"
            android:orientation="vertical"
            android:background="@drawable/box_bg_home"
            android:padding="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvProMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/tvProTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textColor="@color/neutral_800"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/box_bg_home"
            android:padding="6dp"
            android:layout_gravity="bottom"
            android:contentDescription="Pro User" />

    </LinearLayout>

    <!-- Contra Message (AI) -->
    <LinearLayout
        android:id="@+id/layoutContraMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_brain"
            android:background="@drawable/box_bg_home"
            android:padding="6dp"
            android:layout_gravity="bottom"
            android:contentDescription="AI" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="280dp"
            android:orientation="vertical"
            android:background="@drawable/box_bg_home"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="48dp">

            <TextView
                android:id="@+id/tvContraMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/tvContraTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>